<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bbk"
    android:padding="16dp">


    <EditText
        android:id="@+id/guardianNameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Guardian Name"
        android:textSize="25sp"
        android:textColorHint="@color/black"
        android:background="@drawable/edittextbackground"
        android:inputType="text"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp"/>



    <EditText
        android:id="@+id/guardianMobileEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:hint="Guardian Mobile"
        android:textColorHint="@color/black"
        android:background="@drawable/edittextbackground"
        android:inputType="phone"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp"/>
    <Button
        android:id="@+id/saveGuardianButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="40dp"
        android:text="Save Guardian" />

</LinearLayout>
