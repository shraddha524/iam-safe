<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateComplaintsActivity"
    android:background="@drawable/bbk"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextComplaintTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:textColorHint="@color/black"
        android:background="@drawable/edittextbackground"
        android:hint="Enter Complaint Title"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/editTextComplaintDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:textColorHint="@color/black"
        android:background="@drawable/edittextbackground"
        android:hint="Enter Complaint Description"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp"/>

    <Button
        android:id="@+id/buttonCreateComplaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="100dp"
        android:text="Create Complaint" />

</LinearLayout>