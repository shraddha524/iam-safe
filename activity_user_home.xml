<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbk"
    tools:context=".UserHomeActivity">

    <Button
        android:id="@+id/sosButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FF0000"
        android:text="SOS Emergency Alert"
        android:textSize="15sp"
        app:backgroundTint="#ED2424" />

    <TextView
        android:id="@+id/locationlext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/sosButton"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:text="location"
        android:textSize="15dp"
        android:layout_marginBottom="-50dp"
        android:gravity="center" />

    <Button
        android:id="@+id/addGuardianButton"
        android:layout_width="368dp"
        android:layout_height="35dp"
        android:layout_below="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#EE8AEE"
        android:text="Add Guardian"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/view_registered_button"
        android:layout_width="376dp"
        android:layout_height="37dp"
        android:layout_below="@+id/addGuardianButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#EE8AEE"
        android:text="View Registered"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Im Safe"
        android:backgroundTint="#fff"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="471dp"
        android:layout_below="@+id/addGuardianButton"
        android:layout_marginTop="184dp"
        android:columnCount="2"
        android:rowCount="3">


        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:id="@+id/panic_button"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#FFFF"
            android:drawableTop="@drawable/ic_baseline_local_police_24"
            android:insetLeft="2dp"
            android:insetBottom="2dp"
            android:padding="50dp"
            android:text="police Call"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:id="@+id/nearbyPoliceButton"
            android:background="#FFFF"
            android:drawableTop="@drawable/ic_baseline_place_24"
            android:padding="50dp"
            android:text="Nearby Police Station"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:backgroundTint="#FFFFFF" />


        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:id="@+id/createComplaintsButton"
            android:background="#FFFF"
            android:drawableTop="@drawable/ic_baseline_add_24"
            android:padding="50dp"
            android:text="Complaint Box"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="#FAFFFFFF" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:id="@+id/tipsToEscapeButton"
            android:layout_margin="8dp"
            android:background="#FFFF"
            android:drawableTop="@drawable/ic_baseline_emoji_people_24"
            android:padding="50dp"
            android:text="Self Defense "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="#F2FFFFFF" />



    </GridLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shape" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shape" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shape" />
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/mobileNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>